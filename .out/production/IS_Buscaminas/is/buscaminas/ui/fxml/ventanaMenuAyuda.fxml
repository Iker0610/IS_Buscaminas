<?xml version="1.0" encoding="UTF-8"?>

<?import is.buscaminas.view.VistaAyuda?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            style="-fx-background-color: '#c0c0c0'; -fx-border-color: '#777777'; -fx-border-width: 0 4 4 0;"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="is.buscaminas.controller.MenuAyudaController">

    <center>
        <HBox alignment="CENTER" style="-fx-background-color: '#777777','#ffffff','#c0c0c0'; -fx-background-insets:0 0 0 0, 4 0 0 4, 4;"
              BorderPane.alignment="CENTER">
            <VistaAyuda fx:id="panelAyuda"/>

        </HBox>

    </center>

    <bottom>
        <HBox alignment="CENTER" prefHeight="30" style="-fx-background-color: '#c0c0c0'; -fx-border-color: '#777777'; -fx-border-width: 0 0 0 4;"
              BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" spacing="20.0"
                  style="-fx-background-color: '#777777','#ffffff','#c0c0c0'; -fx-background-insets:0 0 0 4, 4 0 0 0, 4;" HBox.hgrow="ALWAYS">
                <Button fx:id="btnPrev" mnemonicParsing="false" onAction="#prevAyuda" prefHeight="30.0" prefWidth="75.0" text="&lt;- Prev"/>
                <Text fx:id="paginacion" text="/">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Text>
                <Button fx:id="btnNext" mnemonicParsing="false" onAction="#nextAyuda" prefHeight="30.0" prefWidth="75.0" text="Next -&gt;"/>
                <padding>
                    <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                </padding>
            </HBox>
            <padding>
                <Insets top="5.0"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
