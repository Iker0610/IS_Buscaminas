        <top>
            <VBox prefHeight="189.0" prefWidth="540.0" BorderPane.alignment="CENTER">
                <HBox alignment="CENTER" prefHeight="104.0" prefWidth="540.0">
                    <ImageView fitHeight="121.0" fitWidth="528.0">
                        <Image url="@../assets/ranking/titulo.png"/>
                    </ImageView>
                </HBox>
                <HBox alignment="CENTER" prefHeight="39.0" prefWidth="540.0" spacing="50.0">
                    <Button mnemonicParsing="false" onAction="#mostrarRanking1" prefHeight="35.0" prefWidth="100.0" text="Dificultad 1"/>
                    <Button mnemonicParsing="false" onAction="#mostrarRanking1" prefHeight="35.0" prefWidth="100.0" text="Dificultad 2"/>
